                @Html.DisplayFor(modelItem => item.Version.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Systeme.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut.Nom)
