                @Html.DisplayNameFor(model => model.DateResolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Probleme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
